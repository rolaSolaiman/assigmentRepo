<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">


    <View
        android:id="@+id/std_cr"
        android:layout_width="415dp"
        android:layout_height="719dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/std_name"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="student name "
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/std_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="44dp"
        android:text="student id"
        android:textColor="#C6000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std_name" />

    <TextView
        android:id="@+id/std_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:text="student email"
        android:textColor="#99000000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/std_id"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/std_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="32dp"
        android:text="student phone"
        android:textColor="#99000000"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/std_address"
        tools:layout_editor_absoluteX="241dp" />

    <TextView
        android:id="@+id/std_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="36dp"
        android:text="student address"
        android:textColor="#99000000"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/std_email"
        tools:layout_editor_absoluteX="245dp" />

    <TextView
        android:id="@+id/std_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="36dp"
        android:text="student type"
        android:textColor="#99000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std_id" />

    <TextView
        android:id="@+id/std_birthdate"
        android:layout_width="88dp"
        android:layout_height="13dp"
        android:layout_gravity="left"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="32dp"
        android:text="student birthdate"
        android:textColor="#99000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std_type" />


</androidx.constraintlayout.widget.ConstraintLayout>